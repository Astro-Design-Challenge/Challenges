---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex h-dvh flex-col items-center justify-evenly bg-gradient-to-br from-gray-50 to-gray-300 text-neutral-900 p-4"
  >
    <slot />
  </body>
</html>
