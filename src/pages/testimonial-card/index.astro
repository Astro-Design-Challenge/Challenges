---
import TestimonialCard from "../../components/TestimonialCard.astro";
import Layout from "../../layouts/Layout.astro";

const title = "Testimonial Card Challenge";
---

<Layout title={title}>
  <div class="flex h-screen w-full items-center justify-center">
    <TestimonialCard
      image="/assets/img/profile.png"
      name="Sarah Dole"
      username="@sarahdole"
      testimonial=`I've been searching for high-quality abstract images for my design projects,
    and I'm thrilled to have found this platform. The variety and depth of
    creativity are astounding!`
    />
  </div>
</Layout>
