---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props as Props;
---

<button
  class="w-1/2 rounded-sm bg-white px-6 py-4 shadow-sm outline-[0.5px] -outline-offset-[0.5px] outline-neutral-200 transition-colors hover:bg-neutral-50 hover:shadow-xs md:w-1/3"
>
  <a href={href || "#"} class="text-base font-medium md:text-lg">
    {text}
  </a>
</button>
