---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props as Props;
---

<div class="flex flex-col gap-4 md:gap-6">
  <h1 class="text-4xl font-semibold md:text-5xl xl:text-6xl">
    {title}
  </h1>
  <h1 class="text-lg text-neutral-600 md:text-xl">
    {subtitle}
  </h1>
</div>
