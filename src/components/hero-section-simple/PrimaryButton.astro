---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props as Props;
---

<button
  class="w-1/2 rounded-sm bg-indigo-700 px-6 py-4 shadow-sm transition-colors hover:bg-indigo-800 hover:shadow-xs md:w-1/3"
>
  <a href={href || "#"} class="text-base font-medium text-white md:text-lg">
    {text}
  </a>
</button>
